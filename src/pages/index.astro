---
import Navigation from '../components/Navigation.astro';

let title = 'Charles Villard';

---

<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="stylesheet" href={Astro.resolve("../style/main.scss")}>
  </head>

  <body>
    <Navigation />
    <main>
      <section class="section is-medium">
        <div class="container is-max-desktop ">
          <div class="columns is-align-items-center">
            <img class="column mx-auto" src="/public/assets/headshot.png" alt="Photo of Charles Villard">
            <p class="column is-two-thirds-desktop is-half-tablet is-three-quarters-mobile mx-auto is-size-4"><strong class="is-size-3">Charles Villard</strong>, a frontend developer who enjoys making it easier for people to work and create on the web. He's currently working as a Software Engineer at Hewlett-Packard Enterprise. He also helps organize tech-focused communities and speaks at events from time to time. He hates writing in the third-person though.</p>
          </div>
        </div>
      </section>
    </main>
  </body>
</html>
