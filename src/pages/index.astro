---
import Footer from '../components/Footer.astro';
import Navigation from '../components/Navigation.astro';

let title = 'Charles Villard';

---

<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="stylesheet" href={Astro.resolve("../style/main.scss")}>
  </head>

  <body>
    <Navigation />
    <main>
      <section class="hero-section">
        <div class="columns is-align-items-center">
          <img class="headshot" src="/public/assets/headshot.png" alt="Photo of Charles Villard">
        </div>
        <p class="intro">
          <span class="branded-text home-branding">Charles Villard</span> is a frontend developer who enjoys making it easier for people to work and create on the web. He's currently working as a Software Engineer at Hewlett-Packard Enterprise. He also helps organize tech-focused communities and speaks at events from time to time. He hates writing in the third-person though.
        </p>
      </section>
      <div class="colors">
        <p style="background-color:var(--c-gray-200)"></p>
        <p style="background-color:var(--c-gray-400)"></p>
        <p style="background-color:var(--c-amber)"></p>
        <p style="background-color:var(--c-cyan)"></p>
        <p style="background-color:var(--c-blue)"></p>
        <p style="background-color:var(--c-red)"></p>
        <p style="background-color:var(--c-slate)"></p>
      </div>
    </main>
    <Footer />
  </body>
</html>
